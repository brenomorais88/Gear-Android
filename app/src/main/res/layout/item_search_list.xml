<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/itemSearchListIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_color_f6f6f7_corner"
        android:padding="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_filter"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/itemSearchListTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginStart="15dp"
        android:textStyle="bold"
        android:text="Modelo / Marca"
        app:layout_constraintTop_toTopOf="@+id/itemSearchListIcon"
        app:layout_constraintStart_toEndOf="@+id/itemSearchListIcon"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/itemSearchListSelection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/color_b70000"
        android:textStyle="bold"
        android:layout_marginStart="15dp"
        android:text="Selecione o modelo e a Marca do VeÃ­culo"
        app:layout_constraintTop_toBottomOf="@+id/itemSearchListTitle"
        app:layout_constraintBottom_toBottomOf="@+id/itemSearchListIcon"
        app:layout_constraintStart_toEndOf="@+id/itemSearchListIcon"
        />
    
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/rightArrowIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rotation="180"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/itemSearchListTitle"
        app:layout_constraintBottom_toBottomOf="@+id/itemSearchListTitle"
        app:srcCompat="@drawable/ic_chevron_left"
        />
</androidx.constraintlayout.widget.ConstraintLayout>