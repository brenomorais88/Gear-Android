        app:layout_constraintTop_toTopOf="parent"
        tools:text="Estado do Veiculo"
        />

    <RadioGroup
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
